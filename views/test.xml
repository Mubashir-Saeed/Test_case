<odoo>
    <record model="ir.ui.view" id="test_tree">
        <field name="name">hospital.test.tree</field>
        <field name="model">hospital.test</field>
        <field name="arch" type="xml">
            <tree string="Test">
                <field name="lab_id"/>
                <field name="test_name"/>
                <field name="test_duration"/>
                <field name="test_price"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="test_form">
        <field name="name">hospital.test.form</field>
        <field name="model">hospital.test</field>
        <field name="arch" type="xml">
            <form string="Test">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="lab_id" readonly='1'/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="test_name"/>
                            <field name="test_short_name"/>
                        </group>
                        <group>
                            <field name="test_duration"/>
                            <field name="test_price"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_test" model="ir.actions.act_window">
        <field name="name">Hospital test</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.test</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="O_view_nocontent_smiling_face">
                Create your First Test!
            </p>
        </field>
    </record>

    <menuitem id="hospital_test" name="Test" parent="hospital_root" sequence="1" action="action_test"/>
</odoo>